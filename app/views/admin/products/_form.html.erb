<%= form_for [:admin, @product] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :placeholder => "Digite o nome do produto" %>
  </p>
  <p>
    <%= f.label :minimum, "Mínimo" %>
    <%= f.text_field :minimum, :placeholder => "Mínimo"%>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, :placeholder => "Digite a descrição do produtos (opcional)" %>
  </p>
  <%if User.find(current_user.id).has_role? :admin %>
  <p><%= f.submit "Salvar", :class => "button" %></p>
  <% end %>
<% end %>
